{% extends 'base.html.twig' %}

{% block title %}
    Trick
{% endblock %}

{% block body %}
    <div class="container body-box">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class=" col-sm-12">
                <h1 class="display-4 text-center trick-title">
                    Modification du Trick : "{{ trick.title }}"
                </h1>
            </div>
        </div>
        {% if trick.images is defined %}
            <div class="row">
                <div class="col-sm-12">
                    <div class="card home-card">
                        {#<img class="card-img-top card-img-display"
                             src="{{ asset('uploads/images/' ~ trick.images) }}"
                             alt="Card image cap">#}
                        <div class="card-footer">
                            <div class="field-img-edit">
                                {{ form_widget(form.images) }}
                            </div>
                            <button class="btn btn-img-delete float-right">
                                <span class="oi oi-trash"></span>
                            </button>
                            <button class="btn btn-img-edit action-button-space float-right">
                                <span class="oi oi-pencil"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-sm-12">
                    <div class="card home-card">
                        <img class="card-img-top"
                             src="{{ asset('images/default_trickImage.jpg') }}"
                             alt="Card image cap">
                        <div class="card-footer">
                            <div class="field-img-edit">
                                {{ form_widget(form.images) }}
                            </div>
                            <button class="btn btn-img-delete float-right">
                                <span class="oi oi-trash"></span>
                            </button>
                            <button class="btn btn-img-edit action-button-space float-right">
                                <span class="oi oi-pencil"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if trick.images is defined %}
                <div class="row d-flex">
            {% for image in imageList %}
                    <div class="trick-galery-box col-sm-12 col-md-6 col-lg-3">
                        <div class="card home-card">
                            {#<img class="card-img-top card-img-display"
                                 src="{{ asset('uploads/images/' ~ trick.images ) }}"
                                 alt="Card image cap">#}
                            <div class="card-footer">
                                <div class="field-img-edit">
                                    {{ form_widget(form.images) }}
                                </div>
                                <button class="btn btn-img-delete float-right">
                                    <span class="oi oi-trash"></span>
                                </button>
                                <button class="btn btn-img-edit action-button-space float-right">
                                    <span class="oi oi-pencil"></span>
                                </button>
                            </div>
                        </div>
                    </div>
            {% endfor %}
            </div>
        {% endif %}

        <div class="row d-flex">
            {% if trick.videos is defined %}
                {% for video in videoList %}
                    <div class="trick-galery-box col-sm-12 col-md-6 col-lg-3">
                        <div class="card home-card">
                            <embed class="card-img-top card-video-display"
                                   src="https://www.youtube.com/embed/{{ video.url }}"
                                   allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                   allowfullscreen>
                            <div class="card-footer">
                                <div class="field-video-edit">
                                    {{ form_widget(form.videos) }}
                                </div>
                                <button class="btn btn-video-delete float-right">
                                    <span class="oi oi-trash"></span>
                                </button>
                                <button class="btn btn-video-edit action-button-space float-right">
                                    <span class="oi oi-pencil"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box-form">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="field-space">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                    </div>
                    <div class="field-space">
                        {{ form_label(form.content) }}
                        {{ form_widget(form.content) }}
                    </div>
                    <div class="field-space">
                        {{ form_label(form.groupTrick) }}
                        {{ form_widget(form.groupTrick) }}
                    </div>
                    <div class="field-space">
                        <div class="row">
                            <div class="col-sm-10 col-md-6 col-lg-4">
                                {{ form_widget(form.images) }}
                                <a href="#" id="add_image" class="btn btn-warning">Ajouter une image</a>
                            </div>
                        </div>
                    </div>
                    <div class="field-space">
                        <div class="row">
                            <div class="col-sm-10 col-md-6 col-lg-4">
                                {{ form_widget(form.videos) }}
                                <a href="#" id="add_video" class="btn btn-warning">Ajouter une video</a>
                            </div>
                        </div>
                    </div>
                    <div class="field-space">
                        <a class="btn btn-danger float-right"
                           href="{{ path('app_delete', {'id' : trick.id}) }}">Supprimer</a>
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary float-right action-button-space'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="field-space">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/formTrickEdit.js') }}"></script>
{% endblock %}