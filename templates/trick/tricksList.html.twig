{% extends 'base.html.twig' %}

{% block title %}
    Liste des Tricks
{% endblock %}

{% block body %}
    <div class="container body-box">
        <section>
            <div class="row">
                <div class="col-sm-12">
                    <h1>Liste des Tricks</h1>
                </div>
            </div>
            <hr>
            <div class="row d-flex">
                {% for trick in trickList %}
                    <div class="col-sm-12 col-md-3">
                        <div class="card home-card">
                            {% if trick.image.name is defined %}
                                <img class="card-img-top" src="{{ asset('uploads/images/')~trick.image.name }}">
                            {% else %}
                                <img class="card-img-top" src="{{ asset('images/default_trickImage.jpg') }}"
                                     alt="Card image cap">
                            {% endif %}
                            <div class="card-body">
                                <a class="" href="{{ path('app_trick', {'id' : trick.id}) }}">{{ trick.title }}</a>
                                <a class="" href="{{ path('app_edit', {'id' : trick.id}) }}"><span
                                            class="oi oi-pencil"></span></a>
                                <a class="" href="{{ path('app_delete', {'id' : trick.id}) }}"><span
                                            class="oi oi-trash"></span></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>
                        Aucun Trick publi√© pour le moment.
                    </p>
                {% endfor %}
            </div>
        </section>
    </div>
    </div>
    </div>
{% endblock %}