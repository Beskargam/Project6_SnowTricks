{% extends 'base.html.twig' %}

{% block title %}
    Trick
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <img class="card-img-top" src="{{ asset('images/default_trickImage.jpg') }}"
                     alt="Card image cap">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h1>{{ trick.title }}</h1>
                <p>
                    {{ trick.content }}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="trick-info-box">
                    Publié le : {{ trick.publishedAt|date('d/m/Y') }}
                </div>
                <div class="trick-info-box">
                    Groupe :
                </div>
                {% if trick.updatedAt is defined %}
                <div class="trick-info-box">
                    Mise à jour le : {{ trick.updatedAt|date('d/m/Y') }}
                </div>
                {% endif %}
            </div>
        </div>
        <hr>
        <p>
            Ici sera le formulaire de commentaire
        </p>
        <hr>
        <p>
            Ici sera la liste des commentaires
        </p>
    </div>
{% endblock %}