{% extends 'base.html.twig' %}

{% block title %}
    Trick
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% if trick.image.name is defined %}
                    <img src="{{ asset('uploads/images/')~trick.image.name }}">
                {% else %}
                    <img class="card-img-top" src="{{ asset('images/default_trickImage.jpg') }}"
                         alt="Card image cap">
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h1>{{ trick.title }}</h1>
                <p>
                    {{ trick.content }}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="trick-info-box">
                    Publié le : {{ trick.publishedAt|date('d/m/Y') }}
                </div>
                <div class="trick-info-box">
                    Groupe :
                </div>
                {% if trick.updatedAt is defined %}
                    <div class="trick-info-box">
                        Mise à jour le : {{ trick.updatedAt|date('d/m/Y') }}
                    </div>
                {% endif %}
            </div>
        </div>
        <hr>
        {% if app.user.username is defined %}
        {{ form_start(form) }}
        <div class="field-space">
            {{ form_row(form.comment_content) }}
        </div>
        <div class="field-space">
            {{ form_widget(form.save_comment, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
        {% else %}
        <div class="field-space">
            Vous devez être connecté pour écrire un commentaire
        </div>
        {% endif %}
        <hr>
        {% if comment is defined %}
            {% for comment in commentList %}
                <div class="col-sm-12 col-md-3 col-lg-2">
                    <div class="card home-card">
                        <div class="card-header">
                            {{ comment.user.username }}
                        </div>
                        <div class="card-body">
                            {{ comment.content }}
                        </div>
                        <div class="card-footer">
                            {{ comment.publishedAt }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>
                Aucun commentaire. Soyez le premier à en écrire un !
            </p>
        {% endif %}
    </div>
{% endblock %}