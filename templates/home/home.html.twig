{% extends 'base.html.twig' %}

{% block title %}
    SnowTricks Home
{% endblock %}

{% block body %}
    <div class="container body-box">
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron">
                    <h1 class="display-4"><img src="{{ asset('images/logo.png') }}"> SnowTricks</h1>
                    <p class="lead">Bienvenue sur le Site communautaire SnowTricks</p>
                    <hr>
                    <p>Premier Site de partage de Tricks de Snowboard</p>
                </div>
            </div>
        </div>
        {% if app.user.username is defined %}
            <div class="row">
                <div class="col-sm-12">
                    <a class="btn btn-primary"
                       href="{{ path('app_add') }}">Ajouter un Nouveau Trick</a>
                </div>
            </div>
        {% endif %}
        <section>
            <div class="row d-flex">
                {% if trickList is defined %}


                    {% for trick in trickList %}
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <div class="card home-card">


                                {% if trick.images is defined %}
                                        <img class="card-img-top card-img-zoom"
                                             src="{{ asset('uploads/images/'~ images.name, {'id' : trick.id}) }}"
                                             alt="Card image cap">
                                {% else %}
                                    <img class="card-img-top card-img-zoom"
                                         src="{{ asset('images/default_trickImage.jpg') }}"
                                         alt="Card image cap">
                                {% endif %}


                                <div class="card-body">
                                    <a class="" href="{{ path('app_trick', {'id' : trick.id}) }}">{{ trick.title }}</a>
                                    {% if app.user.username is defined %}
                                        <a class="float-right"
                                           href="{{ path('app_delete', {'id' : trick.id}) }}"><span
                                                    class="oi oi-trash"></span></a>
                                        <a class="action-button-space float-right"
                                           href="{{ path('app_edit', {'id' : trick.id}) }}"><span
                                                    class="oi oi-pencil"></span></a>
                                    {% endif %}
                                </div>


                            </div>
                        </div>
                    {% endfor %}



                {% else %}
                    <div class="col-sm-12 justify-content-center">
                        <div class="card home-card">
                            <div class="card-body">
                                Aucun Trick publi√© pour le moment.
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}